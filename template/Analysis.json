{
    "analysis" : {
        "analyzer" : {
            "device_length_analyzer" : {
                "tokenizer" : "device_length_tokenizer",
                "filter": ["device_length_filter", "lcase_filter", "device_delimiter_filter"]
            },
            "model_analyzer" : {
                "tokenizer" : "whitespace",
                "filter": ["lcase_filter", "model_delimiter_filter"]
            }
        },
        "tokenizer" : {
            "device_length_tokenizer" : {
                "type" : "edgeNGram",
                "min_gram" : "3",
                "max_gram" : "20",
                "token_chars": [ "letter", "digit" ]
            }
        },
        "filter": {
            "device_length_filter" : {
                "type" : "length",
                "min" : 2,
                "max" : 15
            },
            "lcase_filter" : {
                "type" : "lowercase"
            },
            "device_delimiter_filter" : {
                "type" : "word_delimiter",
                "generate_word_parts" : "false",
                "generate_number_parts" : "false",
                "catenate_words" : "false",
                "catenate_numbers" : "false",
                "catenate_all" : "false",
                "split_on_case_change" : "false",
                "preserve_original" : "false",
                "split_on_numerics" : "false",
                "stem_english_possessive" : "false",
                "type_table" : [ "- => SUBWORD_DELIM" ]
            },
            "model_delimiter_filter" : {
                "type" : "word_delimiter",
                "generate_word_parts" : "false",
                "generate_number_parts" : "false",
                "catenate_words" : "false",
                "catenate_numbers" : "false",
                "catenate_all" : "false",
                "split_on_case_change" : "false",
                "preserve_original" : "false",
                "split_on_numerics" : "false",
                "stem_english_possessive" : "false",
                "type_table" : [ "- => ALPHANUM" ]
            }
        }
    }
}
